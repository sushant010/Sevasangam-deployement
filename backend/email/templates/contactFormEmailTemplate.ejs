<!-- create email template -->

<!DOCTYPE html>
<html>

<head>
  <title>Contact Form Email</title>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap");

    body {
      font-family: "Poppins", sans-serif;
      background-color: #f4f4f4;
      color: #333;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    p {
      font-size: 1.2rem;
      margin: 0;
      padding: 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    h1 {
      color: #ff395c !important;
      font-weight: 700;
    }

    th,
    td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    tr td {
      color: #202020;
    }

    table {
      background-color: #f2f2f2;
      color: #ff395c;
      font-weight: 700;
    }

    button {
      background-color: #ff395c;
      padding: 6px 10px;
      font-size: 14px;
      margin: 4px 0px;
    }
  </style>
</head>


<body>
  <h1>New Ticket Received</h1>
  <table>
    <tr>
      <th>Title</th>
      <td>
        <%= title %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= email %>
      </td>
    </tr>
    <tr>
      <th>Message</th>
      <td>
        <%= message %>
      </td>
    </tr>

  </table>

  <button><a href="<%= url %>">View All Tickets</a></button>
</body>

</html>